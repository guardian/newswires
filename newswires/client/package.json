{
	"name": "newswires-client",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"typecheck": "tsc --noEmit",
		"lint": "eslint src/** --no-error-on-unmatched-pattern --fix",
		"lint:ci": "eslint src/** --no-error-on-unmatched-pattern",
		"preview": "vite preview",
		"test": "jest --detectOpenHandles",
		"test:watch": "jest --watch",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"prettier": "@guardian/prettier",
	"dependencies": {
		"@chromatic-com/storybook": "^5.0.0",
		"@elastic/datemath": "5.0.3",
		"@elastic/eui": "112.0.0",
		"@emotion/css": "11.13.5",
		"@emotion/react": "11.14.0",
		"@guardian/user-telemetry-client": "1.2.1",
		"lodash": "4.17.23",
		"moment": "2.30.1",
		"moment-timezone": "0.6.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"sanitize-html": "^2.17.1",
		"uuid": "13.0.0",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@guardian/prettier": "^10.0.0",
		"@storybook/addon-onboarding": "10.2.0",
		"@storybook/react": "10.2.0",
		"@storybook/react-vite": "10.2.0",
		"@testing-library/react": "16.3.2",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@types/sanitize-html": "2.16.0",
		"@vitejs/plugin-react": "5.1.2",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.5.0",
		"eslint-plugin-storybook": "10.2.0",
		"globals": "^17.1.0",
		"jest": "30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"prettier": "^3.8.1",
		"storybook": "10.2.0",
		"timezone-mock": "^1.4.1",
		"ts-jest": "29.4.6",
		"vite-plugin-checker": "^0.12.0"
	},
	"jest": {
		"testEnvironment": "jsdom",
		"testMatch": [
			"<rootDir>/src/**/*.test.{ts,tsx}"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		}
	}
}
