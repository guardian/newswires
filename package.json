{
	"name": "newswires",
	"version": "1.0.0",
	"description": "Newswires feed app",
	"workspaces": [
		"cdk"
	],
	"scripts": {
		"test": "npm run test --workspaces --if-present",
		"synth": "npm run synth --workspace=cdk",
		"typecheck": "npm run typecheck --workspaces",
		"format": "prettier --write --ignore-path .gitignore \"./**/*{.js,.ts,.json,.md,.yml}\"",
		"build": "npm run build --workspaces --if-present",
		"lint": "eslint packages/** --ext .ts --no-error-on-unmatched-pattern",
		"dev": "npm run dev --workspace=ingestion-lambda"
	},
	"repository": {
		"type": "git",
		"url": "github.com/guardian/newswires"
	},
	"devDependencies": {
		"@guardian/eslint-config-typescript": "8.0.0",
		"@guardian/prettier": "5.0.0",
		"@guardian/tsconfig": "1.0.0",
		"@types/jest": "29.5.12",
		"@types/node": "22.4.2",
		"eslint": "8.57.0",
		"jest": "29.7.0",
		"prettier": "3.3.3",
		"source-map-support": "0.5.20",
		"ts-jest": "29.2.4",
		"ts-node": "10.9.2",
		"typescript": "5.1.6",
		"tsx": "4.16.5"
	},
	"prettier": "@guardian/prettier",
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true,
			"jest": true
		},
		"extends": [
			"@guardian/eslint-config-typescript"
		],
		"parserOptions": {
			"ecmaVersion": 2020,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"@typescript-eslint/no-inferrable-types": 0,
			"import/no-namespace": 2
		},
		"ignorePatterns": [
			"**/*.js",
			"node_modules",
			"cdk.out",
			".eslintrc.js",
			"jest.config.js"
		]
	}
}
