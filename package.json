{
	"name": "newswires",
	"version": "1.0.0",
	"description": "Newswires feed app",
	"workspaces": [
		"cdk",
		"ingestion-lambda",
		"cleanup-lambda",
		"poller-lambdas",
		"newswires/client"
	],
	"scripts": {
		"test": "npm run test --workspaces --if-present",
		"synth": "npm run synth --workspace=cdk",
		"typecheck": "npm run typecheck --workspaces",
		"format": "prettier --write --ignore-path .gitignore \"./**/*{.js,.ts,.json,.md,.yml}\"",
		"build": "npm run build --workspaces --if-present",
		"lint": "npm run lint --workspaces",
		"lint:ci": "npm run lint:ci --workspaces",
		"dev": "npm run dev --workspace=ingestion-lambda",
		"storybook": "npm run storybook --workspace=newswires/client",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "github.com/guardian/newswires"
	},
	"devDependencies": {
		"@guardian/eslint-config-typescript": "12.0.0",
		"@guardian/prettier": "8.0.1",
		"@guardian/tsconfig": "1.0.0",
		"@types/jest": "29.5.12",
		"@types/node": "22.4.2",
		"esbuild": "^0.25.1",
		"eslint": "8.57.0",
		"husky": "^9.1.7",
		"jest": "29.7.0",
		"lint-staged": "^15.5.0",
		"prettier": "3.5.3",
		"ts-jest": "29.3.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "5.8.3",
		"vite": "^6.2.3"
	},
	"prettier": "@guardian/prettier",
	"eslintConfig": {
		"extends": [
			"@guardian/eslint-config-typescript"
		],
		"ignorePatterns": [
			"**/*.js",
			"node_modules",
			"cdk.out",
			".eslintrc.js",
			"jest.config.js",
			"**/generated/*"
		],
		"rules": {
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"args": "all",
					"argsIgnorePattern": "^_",
					"caughtErrors": "all",
					"caughtErrorsIgnorePattern": "^_",
					"destructuredArrayIgnorePattern": "^_",
					"varsIgnorePattern": "^_",
					"ignoreRestSiblings": true
				}
			]
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "jest --findRelatedTests --passWithNoTests"
	},
	"dependencies": {
		"zod": "3.24.2"
	}
}
