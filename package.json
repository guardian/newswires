{
	"name": "newswires",
	"version": "1.0.0",
	"description": "Newswires feed app",
	"workspaces": [
		"cdk",
		"shared",
		"ingestion-lambda",
		"cleanup-lambda",
		"poller-lambdas",
		"newswires/client",
		"email-filter-lambda",
		"fingerpost-queueing-lambda",
		"recomputation-lambda"
	],
	"scripts": {
		"test": "lage test",
		"test:ci": "npm run test --workspaces --if-present",
		"synth": "npm run synth --workspace=cdk",
		"typecheck": "lage typecheck",
		"typecheck:ci": "npm run typecheck --workspaces",
		"build": "lage build",
		"build:ci": "npm run build --workspaces",
		"lint": "lage lint",
		"lint:ci": "npm run lint:ci --workspaces",
		"pre-commit-checks": "lage precommit",
		"dev": "npm run dev --workspaces --if-present",
		"storybook": "npm run storybook --workspace=newswires/client",
		"prepare": "husky",
		"clear_jest": "jest --clearCache"
	},
	"repository": {
		"type": "git",
		"url": "github.com/guardian/newswires"
	},
	"devDependencies": {
		"@guardian/eslint-config": "13.0.0",
		"@guardian/prettier": "9.0.0",
		"@guardian/tsconfig": "1.0.1",
		"@types/jest": "30.0.0",
		"@types/node": "22.15.35",
		"@typescript-eslint/parser": "^8.51.0",
		"esbuild": "^0.27.2",
		"eslint": "9.39.2",
		"eslint-plugin-prettier": "5.5.4",
		"husky": "^9.1.7",
		"jest": "30.2.0",
		"lage": "^2.14.15",
		"lint-staged": "16.2.7",
		"prettier": "3.7.4",
		"ts-jest": "29.4.6",
		"tsx": "^4.21.0",
		"typescript": "5.9.3",
		"vite": "^7.3.0"
	},
	"prettier": "@guardian/prettier",
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "jest --findRelatedTests --passWithNoTests"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "3.962.0",
		"@guardian/libs": "^27.0.0",
		"@sentry/react": "^10.32.1",
		"@types/aws-lambda": "8.10.159",
		"mailauth": "^4.12.0",
		"node-html-parser": "7.0.2",
		"zod": "4.3.5"
	}
}
